Bootstrap: docker
From: continuumio/miniconda3:4.8.2

%post
    VERSION=5.30.1
    #conda install -y -c conda-forge mamba
    conda install -y -c bioconda -c conda-forge snakemake=$VERSION
    conda clean --all

%environment
    export SHELL=/bin/bash
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%test
    snakemake --help

%runscript
    snakemake $*

%help
    Singularity container for snakemake

%labels
    author="Adrien Leger"
    author_email="contact@adrienleger.com"
